extends dash_lab

block content
	.col-md-9
		+panel-default("Muestras")
			.panel-body
				.table-responsive
					table#tblMuestras.table.table-hover
						thead
							tr
								th Codigo
								th Fecha Toma Muestra
								th Tipo de Muestra
								th Paciente
								th Recibir
								th Notificar
								th Resultados
						tbody

							if muestras
								each muestra in muestras
									tr
										td=muestra.codigo
										td=muestra.fecha
										td=muestra.tipo
										td paciente de muestra
										td
											if muestra.estado == "Pendiente"
												button.btnRecibido.btn(type="submit") Recibir
										td 
											if muestra.estado == "Pendiente"
												button.btnNotificar.btn(type="submit") Notificar
										td 
											if muestra.estado == "En Espera"
												button.btnIngresar.btn(type="submit") Ingresar Resultado
append scripts
	script
		include ../../public/javascripts/laboratorista.js
