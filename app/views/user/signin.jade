extends ../dash_layout

block content
    .col-md-4.col-md-offset-4
        h1 Sign in
        if hasErrors
            .alert.alert-danger
                each msg in messages
                    p= msg
        form.form-signin(action='/user/signin', method='post')
            //.form-group
            .input-group
                //label(for='email')  E-mail
                span#basic-addon1.input-group-addon
                    span.glyphicon.glyphicon-user(aria-hidden='true')
                input#email.form-control(type='text', name='email',placeholder='E-Mail')
            .input-group
                //label(for='password') Password
                span#basic-addon1.input-group-addon
                    span.glyphicon.glyphicon-lock(aria-hidden='true')
                input#password.form-control(type='password', name='password', placeholder='Password')
                input(type='hidden', name='_csrf', value=csrfToken)

            select.form-control(id='selectRol', name='rol')
                    option(value='cliente') Cliente
                    option(value='operario') Operario
                    option(value='laboratorista') Laboratorista

            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
block list
